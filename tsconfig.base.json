{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "paths": {
      "@ambient/client/*": ["packages/client/*"],
      "@ambient/server/*": ["packages/server/*"],
      "@ambient/shared/*": ["packages/shared/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es2016"
  }
}
