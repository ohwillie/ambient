{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "target": "es2016",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@ambient/client/*": ["packages/client/*"],
      "@ambient/server/*": ["packages/server/*"],
      "@ambient/shared/*": ["packages/shared/*"]
    }
  }
}
